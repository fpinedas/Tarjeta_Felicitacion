<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Al tratarse de un "set", todas las animaciones definidas en este fichero
        se ejecutarán simultáneamente.

        duration: milisegundos de duración de la animación
        scale: animación de cambio de escala.
            fromXScale: 0-> sin tamaño 1-> tamaño original.
            pivotX: 50% comienzo en el centro de la animación.
        rotate: animación de giro.
            fromDegrees: punto de comienzo de la rotación (en grados).
     -->

    <!-- Zoom desde el centro del objeto -->
    <scale
        android:duration="3000"
        android:fromXScale="0"
        android:toXScale="1"
        android:fromYScale="0"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        />

    <!-- Giro completo desde el centro del objeto -->
    <rotate
        android:duration="3000"
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        />
</set>